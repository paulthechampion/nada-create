<main>
    <div class="sign-div">
        <h2 class=sign-header>SIGN UP</h2>
        <%if (hasErrors) {%>
        
            <%message.forEach(messages=>{%>
            <div class="sign-message-div"> <%=messages%></div>
    <%})}%>  
    
        <div class="sign-input-div">
            <form action="/user/signup" method="POST">

                <div class="sign-input-small-div">
                    <div class="email-div">
                         <label>Email</label>
                    </div>
                    <input name="email" type="email" class="sign-input" autocomplete="off"/>
                </div>

                <div class="sign-input-small-div">
                    <div class="password-div">
                         <label>Password</label>
                    </div>
                    <input name="password" type="password" class="sign-input" autocomplete="off"/>
                    <input type="hidden" name="_csrf" value="<%=csrfToken%>"/>
                </div>
                <button type="submit" class="sign-button">SIGN UP</button>
            </form>

            Already have an account?<a href="/user/signin" class="sign-switch">Sign In</a>
        </div>

        
    </div>
</main>