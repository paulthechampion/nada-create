
    <div>
        <h1>Checkout</h1> 
        <h4>Your Total: NGN<%=total%></h4> 
        <form id="paymentForm" method="POST" action="/store/checkout">
            <div class="form-group">
               <label for="email">Email Address</label>
               <input type="email" id="email-address" name="email" required />
             </div>
             <div class="form-group">
               <label for="first-name">First Name</label>
               <input type="text" id="first-name"  name="firstName"/>
             </div>
            <div class="form-group">
              <label for="last-name">Last Name</label>
               <input type="text" id="last-name" name="lastName" />
             </div>
             <div class="form-group">
                <label for="address">Delivery Address</label>
                 <input type="text" id="address" name="address"/>
               </div>

             <input type="number" value="<%=total%>" id="total-price" hidden>
             <input type="object" value="<%=cart%>" id="cart" hidden>
             <input type="" value="<%=user%>" id="user" hidden>

             
             <div class="form-submit">
               <button type="submit" onclick="payWithPaystack()"> Pay </button>
             </div>

           </form>
        </div>
            <script src="https://js.paystack.co/v1/inline.js"></script> 
        <script src="/script/paystack.js"></script>
               
            </script>
                        




