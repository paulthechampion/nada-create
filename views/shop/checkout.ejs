
    <div class="checkout-div">
       <div class="checkout-header-div"> <h1>CHECKOUT/DELIVERY <i class="fa fa-truck" aria-hidden="true"></i>
       </h1> </div>
        <div class="checkout-details-div">
          <div class="checkout-price-div">
            <h2 class="chechout-H2">Your Total: NGN <%=numberWithCommas(total)%></h2> 
          </div>
            <form id="paymentForm" method="POST" action="/store/checkout">
                <div class="form-group">
                  <label for="first-name" class="delivery-labels">First Name</label>
                  <div class="delivery-input-div">
                     <input type="text" id="first-name"  name="firstName" class="delivery-input" required/>
                  </div>
                </div>
            
                <div class="form-group">
                  <label for="last-name" class="delivery-labels">Last Name</label>
                  <div class="delivery-input-div">
                     <input type="text" id="last-name" name="lastName" class="delivery-input" required/>
                  </div>
                </div>
                
                <div class="form-group">
                    <label for="address" class="delivery-labels">Delivery Address</label>
                    <div class="delivery-input-div">
                       <input type="text" id="address" name="address" class="delivery-input" required/>
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="address" class="delivery-labels">State</label>
                    <div class="delivery-input-div">
                        <select class="select-input" required>
                          <option>Lagos</option>
                          <option>Ogun</option>
                        </select>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="address" class="delivery-labels">Country</label>
                    <div class="delivery-input-div">
                        <span class="delivery-input">Nigeria Only</span>
                    </div>
                  </div>
                  
                   
                <div class="form-group">
                  <label for="email" class="delivery-labels">Email Address</label>
                  <div class="delivery-input-div">
                     <input type="email" id="email-address" name="email" class="delivery-input" required />
                  </div>
                </div>
      

                <input type="number" value="<%=total%>" id="total-price" hidden>

                <div class="checkout-privacy">
                <input type="checkbox" required/> I have read and consent to PayStack
                 processing my information in accordance with the <a href="">Privacy Statement</a>
                  and Cookie Policy. PayStack is a trusted partner of Nada. 
                </div>

                <div class="checkout-form-submit">
                  <button type="submit" onclick="payWithPaystack()" class="checkout-submit-btn"> Pay </button>
                </div>

              </form>
          </div>
        </div>
            <script src="https://js.paystack.co/v1/inline.js"></script> 
        <script src="/script/paystack.js"></script>
               
            </script>

            <%
            function numberWithCommas(x) {
            return x.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
            }
            %>
                                




